# Top-most EditorConfig file
root = true

# All file defaults
[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# JS files
[*.js]
indent_style = space
indent_size = 2
